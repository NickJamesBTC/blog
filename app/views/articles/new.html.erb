<!DOCTYPE html>
<html>
  <head>
  <h1>NEW!</h1>
  </head>
  <body>
    <%= form_with scope: :article, url: articles_path, local: true do |form| %>
      <p>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </p>

      <p>
        <%= form.label :text %>
        <%= form.text_area :text %>
      </p>

      <p>
        <%= form.submit %>
      </p>
    <% end %>
      
  </body>
</html>